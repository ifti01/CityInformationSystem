@model CityManagementSystem.Models.Country

<form id="CreateTable">
    
    <div class="form-group">
        <label>Name</label>
        <input id="name" name="Name" type="text" class="form-control" placeholder="Enter your name" />
    </div>
    
    <div class="form-group">
        <label>About</label>
        <input class="form-control" name="About" placeholder="Write About">
    </div>

    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
        <button type="button" id="saveBtn" class="btn btn-danger">Save</button>
        <button type="button" id="cancelBtn" class="btn btn-warning">Cancel</button>
    </div>

</form>

<script>
    $("#saveBtn").click(function () {
        $.ajax({
                type: 'POST',
                url: '@Url.Action("Create", "Country")',
                data: $('#CreateTable').serialize()
            })
            .done(function (response) {
                console.log(response);
                window.location.href = window.location.href;
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAIL");
            });
    });
</script>
